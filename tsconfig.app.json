{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "types/*.d.ts",
        "src/**/*",
        "src/**/*.vue",
    ],
    "exclude": [
        "src/**/__tests__/*",
        "src/fast/helper/*"
    ],
    "compilerOptions": {
        "moduleResolution": "Node",
        "composite": true,
        "baseUrl": ".",
        "strict": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    }
}